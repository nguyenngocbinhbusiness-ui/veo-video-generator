{
    "name": "veo-video-generator",
    "version": "1.0.0",
    "description": "Batch video generation using Google Flow (Veo 3.1) with browser automation",
    "main": "dist/main/index.js",
    "author": "Antigravity Agent",
    "license": "MIT",
    "scripts": {
        "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
        "dev:vite": "vite",
        "dev:electron": "wait-on http://localhost:5173 && electron .",
        "build": "tsc -p tsconfig.node.json && tsc && vite build && electron-builder",
        "preview": "vite preview",
        "test": "vitest",
        "test:unit": "vitest run --dir tests/unit",
        "test:integration": "vitest run --dir tests/integration",
        "test:e2e": "playwright test",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "type-check": "tsc --noEmit",
        "semantic-release": "semantic-release"
    },
    "dependencies": {
        "concurrently": "^8.2.2",
        "csv-parse": "^5.6.0",
        "electron-store": "^10.0.0",
        "lucide-react": "^0.344.0",
        "playwright": "^1.48.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "wait-on": "^7.2.0",
        "youtube-dl-exec": "^3.0.27",
        "zustand": "^5.0.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.48.0",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/react": "^16.3.1",
        "@testing-library/user-event": "^14.5.2",
        "@types/node": "^22.0.0",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^7.2.0",
        "@typescript-eslint/parser": "^7.2.0",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.18",
        "electron": "^31.0.0",
        "electron-builder": "^24.13.3",
        "eslint": "^8.57.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.6",
        "jsdom": "^24.0.0",
        "postcss": "^8.4.35",
        "semantic-release": "^24.2.0",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.2.2",
        "vite": "^5.2.0",
        "vitest": "^1.4.0"
    },
    "build": {
        "appId": "com.veo.generator",
        "productName": "Veo Video Generator",
        "files": [
            "dist/**/*",
            "package.json"
        ],
        "directories": {
            "output": "release/${version}"
        },
        "win": {
            "target": "nsis"
        },
        "mac": {
            "target": "dmg"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}
