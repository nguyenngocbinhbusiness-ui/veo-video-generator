{
    "name": "veo-video-generator",
    "version": "1.0.0",
    "description": "Batch video generation using Google Flow (Veo 3.1) with browser automation",
    "main": "dist/main/index.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
        "dev:vite": "vite",
        "dev:electron": "wait-on http://localhost:5173 && electron .",
        "build": "tsc -p tsconfig.node.json && tsc && vite build && electron-builder",
        "build:win": "npm run build -- --win",
        "build:mac": "npm run build -- --mac",
        "build:linux": "npm run build -- --linux",
        "preview": "vite preview",
        "lint": "echo 'ESLint not configured yet'",
        "test": "vitest",
        "test:unit": "vitest run --dir tests/unit",
        "test:integration": "vitest run --dir tests/integration",
        "test:e2e": "playwright test",
        "semantic-release": "semantic-release"
    },
    "dependencies": {
        "csv-parse": "^5.6.0",
        "electron-store": "^10.0.0",
        "playwright": "^1.48.0",
        "youtube-dl-exec": "^3.0.27",
        "zustand": "^5.0.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.57.0",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.1",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^22.0.0",
        "@types/react": "^18.3.0",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react": "^4.3.0",
        "autoprefixer": "^10.4.0",
        "concurrently": "^9.0.0",
        "electron": "^31.0.0",
        "electron-builder": "^25.0.0",
        "jsdom": "^27.4.0",
        "postcss": "^8.4.0",
        "react": "^18.3.0",
        "react-dom": "^18.3.0",
        "tailwindcss": "^3.4.0",
        "typescript": "^5.6.0",
        "vite": "^6.0.0",
        "vitest": "^2.0.0",
        "wait-on": "^8.0.0",
        "@commitlint/cli": "^19.0.0",
        "@commitlint/config-conventional": "^19.0.0",
        "@semantic-release/changelog": "^6.0.0",
        "@semantic-release/git": "^10.0.0",
        "conventional-changelog-conventionalcommits": "^8.0.0",
        "semantic-release": "^24.0.0"
    },
    "build": {
        "appId": "com.veo.generator",
        "productName": "Veo Video Generator",
        "files": [
            "dist/**/*",
            "package.json"
        ],
        "directories": {
            "output": "release"
        },
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "build/icon.ico"
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "icon": "build/icon.icns",
            "category": "public.app-category.productivity"
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "icon": "build/icon.png",
            "category": "Utility"
        }
    }
}